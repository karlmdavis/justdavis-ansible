# Database configuration (external PostgreSQL)
# Use Immich network gateway (fixed subnet) to connect to host PostgreSQL
DB_HOSTNAME=172.30.0.1
DB_PORT=5432
DB_USERNAME={{ vault_postgres_immich_username }}
DB_PASSWORD={{ vault_postgres_immich_password }}
DB_DATABASE_NAME=immich

# Redis configuration
REDIS_HOSTNAME=immich_redis

# Upload location (inside container)
UPLOAD_LOCATION=/usr/src/app/upload

# Timezone
TZ=America/New_York

# Immich settings
IMMICH_VERSION={{ immich_version }}
LOG_LEVEL=log

# Machine Learning settings
# Adjust model TTL to manage GPU power consumption
MACHINE_LEARNING_MODEL_TTL=300

