# If you just change the port or add more ports here, you will likely also
# have to change the VirtualHost statement in
# /etc/apache2/sites-enabled/000-default.conf

# Bind on localhost for both HTTP and HTTPS
Listen 127.0.0.1:80
Listen 127.0.0.1:443

# Bind on private IP address
Listen {{ private_ip_address }}:80
Listen {{ private_ip_address }}:443

# When not in test mode, also bind on public IP address
{% if not is_test %}
Listen {{ public_ip_address }}:80
Listen {{ public_ip_address }}:443
{% endif %}

