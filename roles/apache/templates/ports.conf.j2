# If you just change the port or add more ports here, you will likely also
# have to change the VirtualHost statement in
# /etc/apache2/sites-enabled/000-default.conf

# Don't listen on port 80; the Let's Encrypt ACME redirector handles that.
#Listen 80

<IfModule ssl_module>
	# Apache can't bind port 443 on all IPs, as OpenVPN needs 443 for the VPN gateway IP.
	Listen 127.0.0.1:443
	Listen {{ public_ip if is_test == false else private_ip }}:443
</IfModule>

<IfModule mod_gnutls.c>
	# Apache can't bind port 443 on all IPs, as OpenVPN needs 443 for the VPN gateway IP.
	Listen 127.0.0.1:443
	Listen {{ public_ip if is_test == false else private_ip }}:443
</IfModule>

